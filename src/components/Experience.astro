---
import '@/styles/experience.css'
import Heading from '@Components/ui/Heading.astro'
import WorkExperience from '@/data/Experience.json'

const workHistory = WorkExperience
---

<section class="w-full pb-16" id="experience">
  <div class="px-4 md:px-6">
    <Heading 
    title="Experiencia profesional" 
    subtitle="Resumen de la experiencia" 
    description="Experiencia en el diseño, desarrollo e implementación de aplicaciones y soluciones digitales para organizaciones privadas. He trabajado en entornos que utilizan tecnologías como C#, .NET, Angular y MSSQL, aplicando patrones de diseño como MVC y Arquitectura en Capas para crear software escalable y mantenible."/>

    {/* Work History */}
    <div class="container m-auto w-full">
      <div class="space-y-6">
        {
          workHistory.map((job, index) => (
            <div class="w-full px-6 py-8 mx-auto space-y-6 border border-neutral-300 rounded-md" id="bg-pattern">
              <div class="text-neutral-900">
                <div class="space-y-2">
                  <h2 class="text-2xl font-bold ">{job.title}</h2>
                  <div class="flex flex-col items-start justify-between w-full md:flex-row md:items-center">
                    <div class="flex items-center md:space-x-2">
                      <p class="text-sm text-indigo-600 font-medium">
                        {job.company} |
                        {job.period.endsWith("Actual") ? (
                          <span>{job.period.slice(0, 6)}</span>
                          <span class="bg-indigo-600 text-white text-base/2 font-medium me-2 px-2.5 py-0.5 rounded-sm items-center">
                            {job.period.slice(6)}
                          </span>
                        ) : <span>{job.period}</span> }
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <div>
                <div class="flex flex-wrap gap-2 py-5">
                    {job.tools.map((tool) => {
                  return <span
                    class="px-3 py-1 rounded-lg text-xs bg-indigo-600 text-white"
                  >
                    {tool}
                  </span>

                    })}

                </div>
                <div class="space-y-2">
                  <h2 class="mb-2 text-md font-semibold text-gray-900">
                    Actividades desempeñadas:
                  </h2>
                  <ul class="max-w-4xl space-y-1 text-sm text-neutral-600 list-disc list-inside">
                    {job.responsibilities.map((responsibility) => {
                      return <li>{responsibility}</li>;
                    })}
                  </ul>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>


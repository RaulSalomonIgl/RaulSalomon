---
// Import all your SVG icons
import ChevronUp from "@Components/icons/chevron-up.astro";
import GitHub from "@Components/icons/github.astro";
import Instagram from "@Components/icons/instagram.astro";
import LinkedIn from "@Components/icons/linkedin.astro";
import Rocket from "@Components/icons/rocket.astro";
import X from "@Components/icons/x.astro";

// Define a mapping of icon names to their corresponding SVGs
const iconMap = {
  chevronUp: ChevronUp,
  github: GitHub,
  instagram: Instagram,
  linkedin: LinkedIn,
  rocket: Rocket,
  x: X,
};

// Define the IconProps interface
interface IconProps {
  name: keyof typeof iconMap;
  className?: string;
}

// Destructure props with TypeScript validation
const { name, className }: IconProps = Astro.props as IconProps;

// Get the icon from the map
const IconComponent = iconMap[name];
---

{IconComponent && <IconComponent class={className} />}

---
const { title, subtitle, description } = Astro.props;
---

<div class="w-full max-w-5xl mx-auto px-4 py-12 md:py-16">
  <div class="space-y-4">
    {subtitle && <p class="text-indigo-600 font-medium">{subtitle}</p>}
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
      {title}
    </h2>
    <p class="text-muted-foreground text-lg md:text-xl">
      {description}
    </p>
  </div>
</div>
